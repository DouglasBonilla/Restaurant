@inject HttpClient http
@inject NavigationManager NavManager
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Design</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #F9F5DC;
        }

        header {
            background-color: #333;
            padding: 10px 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .logo img {
            height: 50px;
        }

        .menu {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

            .menu li {
                margin: 0 20px;
            }

                .menu li a {
                    color: #fff;
                    text-decoration: none;
                    font-size: 18px;
                    padding: 10px 0;
                    position: relative;
                }

                    .menu li a:hover, .menu li a.active {
                        color: #f0a500;
                    }

                        .menu li a.active::after {
                            content: '';
                            width: 100%;
                            height: 2px;
                            background-color: #f0a500;
                            position: absolute;
                            bottom: 0;
                            left: 0;
                        }

        .profile {
            display: flex;
            align-items: center;
            color: #fff;
        }

            .profile span {
                margin-right: 10px;
                font-size: 18px;
            }

            .profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #fff;
            }

        .login-button {
            background-color: #f9a825;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            .login-button:hover {
                background-color: #333;
            }
    </style>
</head>
    <header>
        <nav class="navbar">
            <div class="logo">
                <img src="images/logo-cooking.png" alt="Cooking Logo">
            </div>
            <ul class="menu">
                <li><a href="/">Inicio</a></li>
                <li><a href="/food/menu">Menu</a></li>
                <li><a href="user/index">Usuario</a></li>
                <li><a href="order/index">Orden</a></li>
                <li><a href="category/index">Categoria</a></li>
                <li><a href="food/index">Comida</a></li>
            </ul>
            <button class="login-button" @onclick="Login">Iniciar sesión</button>
        </nav>
    </header>
    <main>
        <!-- Aquí va el contenido del cuerpo -->
    </main>
    @code {
    private void Login()
    {
        NavManager.NavigateTo("/login");
    }

    }
