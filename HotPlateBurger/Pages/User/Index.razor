@page "/user/index"
@using HotPlateRestaurant.EN;
@using HotPlateBurger.Data
@using System.Text.Json;
@inject HttpClient http
@inject NavigationManager NavManager;

<PageTitle>Usuario</PageTitle>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .container {
            background-color: #F8F3CC;
            border: solid 1px #808080;
            padding-top: 40px;
            border-radius: 8px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .btn-add {
            background-color: #F39C12;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            border: none;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-add:hover {
                background-color: #E67E22;
                color: white;
        }

        h3 {
            font-size: 1.8em;
            font-weight: bold;
            color: #2C2C2C;
        }

        .btn-search {
            background-color: #2F2F2F;
            color: white;
            border: none;
            padding: 9px 20px;
            cursor: pointer;
            border-radius: 5px;
            font-weight: bold;
        }

        .btn-search:hover {
                background-color: #000;
                color: white;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th {
            background-color: #2C2C2C;
            color: white;
            padding: 10px;
            text-align: left;
            font-size: 1em;
            border: none;
        }

        .table td {
            padding: 10px;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .search-bar {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-bar label {
            margin-right: 10px;
            font-weight: bold;
        }

        .search-bar input {
           margin-right: 10px;
           flex-grow: 1;
           padding: 8px;
           border: 1px solid #ccc;
           border-radius: 5px;
        }

        .btn {
            padding: 8px;
            border: none;
            border-radius: 5px;
            margin-right: 5px;
            font-size: 16px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            color: white;
            cursor: pointer;
            margin-right: 40px;
            box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.1);
        }

        .btn i {
            font-size: 1.2em;
            color: white;
        }

        .btn-edit {
            background-color: #2C2C2C;
        }

        .btn-view {
            background-color: #F39C12;
        }

        .btn-delete {
            background-color: #DC3545;
        }
    </style>
</head>

<div class="header">
    <h3>Usuarios</h3>
    <button id="idNuevo" class="btn-add" @onclick="newUsuario">+ Agregar</button>
</div>
<div class="container">
    <div class="search-bar">
        <label for="searchName">Nombre:</label>
        <input type="text" placeholder="Escriba para buscar" class="form-control" id="searchName" @bind="@userbus.Name" />
        <button class="btn-search" @onclick="BuscarUsuario">Buscar</button>
    </div>
</div>

@if (usuarios == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Estatus</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuarios)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@(user.Status == 1 ? "ACTIVO" : user.Status == 2 ? "INACTIVO" : "Desconocido")</td>
                    <td>
                        <button class="btn btn-edit" @onclick="(() => goModify(user.Id))">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                        <button class="btn btn-view" @onclick="(()=> goDetails(user.Id))">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="btn btn-delete" @onclick="(()=> goDelete(user.Id))">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private userTable[]? usuarios;
    private UserDTO userbus = new UserDTO();

    protected override async Task OnInitializedAsync()
    {
        await LoadUsuarios();
    }

    private async Task LoadUsuarios()
    {
        try
        {
            usuarios = await http.GetFromJsonAsync<userTable[]>("userTable");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
    }

    private async Task BuscarUsuario()
    {
        try
        {
            var result = await http.PostAsJsonAsync("userTable/Buscar", userbus);
            result.EnsureSuccessStatusCode(); 
            var content = await result.Content.ReadAsStringAsync();
            usuarios = JsonSerializer.Deserialize<userTable[]>(content,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching users: {ex.Message}");
        }
    }


    void newUsuario()
    {
        NavManager.NavigateTo("/user/create");
    }

    void goModify(int pId)
    {
        NavManager.NavigateTo($"/user/edit/{pId}");
    }

    void goDetails(int pId)
    {
        NavManager.NavigateTo($"/user/detail/{pId}");
    }

    void goDelete(int pId)
    {
        NavManager.NavigateTo($"/user/delete/{pId}");
    }
}
